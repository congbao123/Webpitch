{{!-- show sân bóng --}}
<div class="mt-4">
  <div class="row">
    {{#each pitchs}}
    <div class="col-sm-6 col-lg-4">
      <div class="card">
        <a href="/pitch/{{this.slug}}">
          <img class="card-img-top fixed-size-img" src="img/{{this.image}}" alt="Card image cap">
        </a>
        <div class="card-body">
          <a href="/pitch/{{this.slug}}">
            <h5 class="card-title">{{this.name}}</h5>
          </a>
          <p class="card-text">{{this.describe}}</p>
           <p class="card-text text-danger"><span class="text-dark">Giá:</span>{{this.price}}</p>
          <a href="/pitch/{{this.slug}}/book" class="btn btn-primary">Đặt Sân</a>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
</div>