     <div class="container mx-auto p-4">
        <h1 class="text-2xl font-bold mb-4">Quản Lý Đặt Sân</h1>
        {{#if bookings.length}}
            <div class="overflow-x-auto">
                <table class="min-w-full bg-white shadow-md rounded-lg overflow-hidden">
                    <thead class="bg-gray-200">
                        <tr>
                            <th class="py-2 px-4 text-left">Sân</th>
                            <th class="py-2 px-4 text-left">Người Đặt</th>
                            <th class="py-2 px-4 text-left">Số Điện Thoại</th>
                            <th class="py-2 px-4 text-left">Ngày</th>
                            <th class="py-2 px-4 text-left">Giờ</th>
                            <th class="py-2 px-4 text-left">Trạng Thái</th>
                            <th class="py-2 px-4 text-left">Hành Động</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each bookings}}
                            <tr class="border-b">
                                <td class="py-2 px-4">{{this.pitch}}</td>
                                <td class="py-2 px-4">{{this.user}}</td>
                                <td class="py-2 px-4">{{this.phone}}</td>
                                <td class="py-2 px-4">{{this.date}}</td>
                                <td class="py-2 px-4">{{this.time}}</td>
                                <td class="py-2 px-4">{{this.status}}</td>
                                <td class="py-2 px-4">
                                     <form action="/Booking/adminBooking/{{this._id}}/status" method="POST" class="inline">
                                         <select name="status" class="border border-gray-300 rounded px-2 py-1">
                                        <option value="pending" {{#eq this.status 'pending'}}selected{{/eq}}>Chờ Xử Lý</option>
                                        <option value="accepted" {{#eq this.status 'accepted'}}selected{{/eq}}>Đã Chấp Nhận</option>
                                        <option value="rejected" {{#eq this.status 'rejected'}}selected{{/eq}}>Đã Từ Chối</option>
                                    </select>
                                    <button type="submit" class="bg-blue-500 text-white px-3 py-1 rounded ml-2">Cập Nhật</button>
                                </form>
                                </td>
                            </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        {{else}}
            <p class="text-red-500">Không có đơn đặt nào.</p>
        {{/if}}
    </div>