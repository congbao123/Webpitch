<div class="container mx-auto py-8">
    <div class="max-w-lg mx-auto bg-white p-8 rounded-lg shadow-lg">
        <h1 class="text-2xl font-bold mb-6">Đặt Sân Bóng: {{pitch.name}}</h1>
        <form action="/pitch/{{pitch.slug}}/book" method="POST">
            <div class="mb-4">
                <label for="user" class="block text-gray-700 font-bold mb-2">Tên người đặt:</label>
                <input type="text" id="user" name="user" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring focus:border-blue-300" required>
            </div>
            <div class="mb-4">
                <label for="phone" class="block text-gray-700 font-bold mb-2">Số điện thoại:</label>
                <input type="tel" id="phone" name="phone" pattern="[0-9]{10}" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring focus:border-blue-300" required>
                <small class="text-red-500">Vui lòng nhập số điện thoại 10 chữ số.</small>
            </div>
            <div class="mb-4">
                <label for="date" class="block text-gray-700 font-bold mb-2">Ngày:</label>
                <input type="date" id="date" name="date" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring focus:border-blue-300" required>
            </div>
            <div class="mb-4">
                <label for="time" class="block text-gray-700 font-bold mb-2">Thời gian:</label>
                <input type="time" id="time" name="time" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring focus:border-blue-300" required>
            </div>
            <button type="submit" class="w-full bg-blue-500 text-white py-2 rounded-md hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-400 focus:ring-opacity-75">Đặt Sân</button>
        </form>
    </div>
</div>
